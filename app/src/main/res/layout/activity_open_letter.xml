<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201f1f"
    tools:context="com.campusmail.campusmail.OpenLetterWithPhotoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_image"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_person_"
                android:adjustViewBounds="true"
                android:background="#00ffffff" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="vertical">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/inside_view"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/frame"
                android:adjustViewBounds="true"
                android:background="#00ffffff"
                android:scaleType="fitXY" >




            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/liny"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Dear"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="post_title"
                android:layout_marginLeft="5dp"
                android:id="@+id/post_title"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/post_photo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text=","/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="post_story"
                android:id="@+id/post_story"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:layout_below="@+id/liny"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_date"
                android:layout_below="@+id/post_story"
                android:layout_margin="10dp"
                android:textColor="@color/colorAccent"
                android:text="date"/>

        </RelativeLayout>




    </RelativeLayout>


</RelativeLayout>
