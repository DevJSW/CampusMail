<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.campusmail.campusmail.OpenLetterWithPhotoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"

            android:layout_gravity="right"
            android:layout_margin="13dp"
            android:orientation="vertical">




            <ImageView
                android:layout_width="44dp"
                android:layout_height="47dp"
                android:id="@+id/inside_view"
                android:layout_marginRight="8dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/frame"
                android:adjustViewBounds="true"
                android:background="#00ffffff"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_image"
                android:layout_margin="5dp"
                android:layout_alignBottom="@id/inside_view"
                android:layout_alignLeft="@id/inside_view"
                android:layout_alignTop="@id/inside_view"
                android:layout_alignRight="@id/inside_view"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="#00ffffff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/anonymous"
                android:layout_margin="3dp"
                android:layout_alignBottom="@id/inside_view"
                android:layout_alignLeft="@id/inside_view"
                android:layout_alignTop="@id/inside_view"
                android:layout_alignRight="@id/inside_view"
                android:scaleType="fitXY"
                android:src="@drawable/anonymous_icons"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:background="#00ffffff" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="vertical">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inside_vie"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/frame"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#00ffffff"
                android:scaleType="fitXY" >




            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/liny"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Dear"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="post_title"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:id="@+id/post_title"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/post_photo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text=","/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="post_story"
                android:id="@+id/post_story"
                android:textSize="17dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/liny"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_date"
                android:layout_below="@+id/post_story"
                android:layout_margin="10dp"
                android:textColor="@color/colorAccent"
                android:text="date"/>

        </RelativeLayout>




    </RelativeLayout>


</RelativeLayout>
