<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:text="Dear"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Question here"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="15dp"
          android:textSize="15dp"
          android:textColor="@color/colorAccent"
          android:id="@+id/post_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=","/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="By:"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/colorPrimary"
               android:id="@+id/post_name"
               android:textSize="10dp"
               android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/anonymous_txt"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="5dp"
                android:textSize="10dp"
                android:visibility="gone"
                android:text="Anonymous"/>


            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:textSize="11dp"
                android:text="timestamp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">




            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/post_image"
                android:adjustViewBounds="true"
                android:layout_alignParentBottom="true"
                android:background="#00ffffff"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/anonymous"
                android:layout_margin="2dp"
                android:layout_alignBottom="@id/inside_view"
                android:layout_alignLeft="@id/inside_view"
                android:layout_alignTop="@id/inside_view"
                android:layout_alignRight="@id/inside_view"
                android:scaleType="fitXY"
                android:src="@drawable/anonymous_icons"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:background="#00ffffff" />





        </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/likeCount"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="7dp"
                    android:text="0"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:src="@drawable/like_btn_black"
                    android:paddingTop="1dp"
                    android:id="@+id/buttonCall"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="2dp"
                    android:text="Likes"/>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/commentCount"
                    android:layout_marginTop="3dp"

                    android:paddingLeft="7dp"
                    android:text="0"/>

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:id="@+id/chatBtn"
                    android:src="@drawable/chat"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="4dp"
                    android:text="Comments"/>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>